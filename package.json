{
  "name": "@stone-js/node-http-adapter",
  "version": "0.1.0",
  "description": "Node HTTP adapter for Stone.js. Run your app on any Node.js HTTP server using the Continuum Architecture.",
  "author": "Mr. Stone <evensstone@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/stone-foundation/stone-js-node-http-adapter.git"
  },
  "homepage": "https://stonejs.dev",
  "bugs": {
    "url": "https://github.com/stone-foundation/stone-js-node-http-adapter/issues"
  },
  "keywords": [
    "node",
    "http",
    "server",
    "bridge",
    "driver",
    "runner",
    "adapter",
    "Stone.js",
    "connector"
  ],
  "files": [
    "/dist"
  ],
  "type": "module",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "engines": {
    "node": ">=18.17.0"
  },
  "scripts": {
    "lint": "ts-standard src",
    "lint:fix": "ts-standard --fix src tests",
    "predoc": "rimraf docs",
    "doc": "typedoc",
    "prebuild": "rimraf dist && npm run doc",
    "build": "rollup -c",
    "test": "vitest run",
    "test:cvg": "npm run test -- --coverage",
    "test:text": "npm run test:cvg -- --coverage.reporter=text",
    "test:html": "npm run test:cvg -- --coverage.reporter=html",
    "test:clover": "npm run test:cvg -- --coverage.reporter=clover",
    "prepare": "husky"
  },
  "peerDependencies": {
    "@stone-js/core": "^0.1.1",
    "@stone-js/filesystem": "^0.1.1",
    "@stone-js/http-core": "^0.1.2"
  },
  "dependencies": {
    "accepts": "^1.3.8",
    "bytes": "^3.1.2",
    "chalk": "^5.4.1",
    "co-body": "^6.2.0",
    "connect": "^3.7.0",
    "content-type": "^1.0.5",
    "deepmerge": "^4.3.1",
    "mime": "^4.0.7",
    "proxy-addr": "^2.0.7",
    "raw-body": "^3.0.0",
    "statuses": "^2.0.1",
    "type-is": "^2.0.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@rollup/plugin-commonjs": "^28.0.3",
    "@rollup/plugin-multi-entry": "^6.0.1",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@rollup/plugin-typescript": "^12.1.1",
    "@types/accepts": "^1.3.7",
    "@types/bytes": "^3.1.5",
    "@types/co-body": "^6.1.3",
    "@types/connect": "^3.4.38",
    "@types/content-type": "^1.1.8",
    "@types/mime": "^4.0.0",
    "@types/node": "^22.15.19",
    "@types/proxy-addr": "^2.0.3",
    "@types/statuses": "^2.0.5",
    "@types/type-is": "^1.6.7",
    "@vitest/coverage-v8": "^3.2.3",
    "husky": "^9.1.7",
    "rimraf": "^6.0.1",
    "rollup": "^4.43.0",
    "rollup-plugin-delete": "^3.0.1",
    "rollup-plugin-dts": "^6.2.1",
    "rollup-plugin-node-externals": "^8.0.0",
    "ts-standard": "^12.0.2",
    "tslib": "^2.8.1",
    "typedoc": "^0.28.5",
    "typedoc-plugin-markdown": "^4.6.4",
    "typescript": "^5.6.3",
    "vitest": "^3.2.3"
  },
  "ts-standard": {
    "globals": [
      "it",
      "test",
      "expect",
      "describe",
      "beforeEach"
    ]
  }
}
